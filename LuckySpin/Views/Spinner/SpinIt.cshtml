@model LuckySpin.ViewModels.SpinItViewModel
<!-- TODO: Change model to a SpinItViewModel-->
@inject LuckySpin.Models.TextTransformService Transform
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}
<button onclick='history.go(0)'>Spin</button>
<div>@Model.A</div><div>@Model.B</div><div>@Model.C</div>
<div class="balance">
    Current Balance: $<span class="emphasis">@ViewBag.Balance</span>
</div>
<span style="display:@ViewBag.ImgDisplay">
    <h2 style="margin-left:0">Congratulations @ViewBag.FirstName,<br />You Win with Lucky Two!</h2>
    <img src="/Images/LuckySpinCoins.jpg" class="animated bounce" alt="Coins" />
</span>